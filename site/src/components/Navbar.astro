---

<header class="fixed top-0 left-0 right-0 z-50">
  <nav class="nav-feminine">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <!-- Logo -->
        <a href="/" class="cursor-pointer group">
          <Logo variant="horizontal" size="sm" />
        </a>

        <!-- Nav Links (Desktop) -->
        <div class="hidden md:flex items-center gap-1">
          <!-- Dropdown Guides -->
          <div class="relative" id="guides-dropdown">
            <button
              id="guides-btn"
              class="px-3 py-2 text-sm text-text-secondary hover:text-text-primary transition-colors duration-200 cursor-pointer rounded-lg hover:bg-surface-hover inline-flex items-center gap-1"
              aria-expanded="false"
              aria-haspopup="true"
            >
              Guides
              <svg class="w-3.5 h-3.5 transition-transform duration-200" id="guides-chevron" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
              </svg>
            </button>

            <!-- Dropdown Panel -->
            <div
              id="guides-panel"
              class="absolute top-full left-0 mt-1 w-72 bg-abyss/95 backdrop-blur-xl border border-border rounded-xl shadow-lg opacity-0 invisible translate-y-1 transition-all duration-200 pointer-events-none"
            >
              <div class="p-2">
                {categories.map((cat) => (
                  <a
                    href={cat.href}
                    class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm text-text-secondary hover:text-text-primary hover:bg-surface-hover transition-all duration-150 cursor-pointer"
                  >
                    <span class="text-base">{cat.icon}</span>
                    <span>{cat.label}</span>
                  </a>
                ))}
              </div>
              <div class="border-t border-border p-2">
                <a
                  href="/guides"
                  class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm text-primary hover:bg-surface-hover transition-all duration-150 cursor-pointer font-medium"
                >
                  Tous les guides
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Actions -->
        <div class="flex items-center gap-3">
          <a
            href="/newsletter"
            class="hidden sm:inline-flex items-center gap-2 btn-feminine text-xs"
          >
            Newsletter
          </a>

          <!-- Mobile Menu Toggle -->
          <button
            id="mobile-menu-btn"
            class="md:hidden w-9 h-9 rounded-lg border border-border hover:border-text-muted flex items-center justify-center transition-colors duration-200 cursor-pointer"
            aria-label="Menu"
            aria-expanded="false"
            aria-controls="mobile-menu"
          >
            <svg id="menu-icon-open" class="w-4 h-4 text-text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg id="menu-icon-close" class="w-4 h-4 text-text-secondary hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Mobile Menu Panel -->
  <div
    id="mobile-menu"
    class="md:hidden fixed inset-x-0 top-16 bottom-0 bg-abyss/95 backdrop-blur-xl border-t border-border transform translate-y-full opacity-0 transition-all duration-300 ease-out pointer-events-none z-40"
  >
    <div class="max-w-7xl mx-auto px-4 py-6 overflow-y-auto max-h-full">
      <p class="px-4 pb-2 text-xs font-semibold text-text-muted uppercase tracking-wider">Guides</p>
      <div class="flex flex-col gap-1">
        {categories.map((cat) => (
          <a
            href={cat.href}
            class="mobile-nav-link flex items-center gap-3 px-4 py-3 text-base font-medium text-text-secondary hover:text-text-primary rounded-xl hover:bg-surface-hover transition-all duration-200 cursor-pointer"
          >
            <span class="text-lg">{cat.icon}</span>
            <span>{cat.label}</span>
          </a>
        ))}
      </div>

      <div class="mt-4 pt-4 border-t border-border">
        <a
          href="/guides"
          class="mobile-nav-link flex items-center justify-between px-4 py-3 text-base font-medium text-primary hover:text-text-primary rounded-xl hover:bg-surface-hover transition-all duration-200 cursor-pointer"
        >
          Tous les guides
          <svg class="w-4 h-4 text-text-muted" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      <div class="mt-4 pt-4 border-t border-border">
        <a
          href="/newsletter"
          class="flex items-center justify-center gap-2 w-full px-4 py-3 text-sm font-semibold bg-primary text-void rounded-xl hover:bg-primary-light transition-colors duration-200 cursor-pointer"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          S'abonner a la newsletter
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('menu-icon-open');
  const iconClose = document.getElementById('menu-icon-close');
  let isOpen = false;

  function toggleMenu() {
    isOpen = !isOpen;
    btn?.setAttribute('aria-expanded', String(isOpen));

    if (isOpen) {
      menu?.classList.remove('translate-y-full', 'opacity-0', 'pointer-events-none');
      menu?.classList.add('translate-y-0', 'opacity-100', 'pointer-events-auto');
      iconOpen?.classList.add('hidden');
      iconClose?.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    } else {
      menu?.classList.add('translate-y-full', 'opacity-0', 'pointer-events-none');
      menu?.classList.remove('translate-y-0', 'opacity-100', 'pointer-events-auto');
      iconOpen?.classList.remove('hidden');
      iconClose?.classList.add('hidden');
      document.body.style.overflow = '';
    }
  }

  btn?.addEventListener('click', toggleMenu);

  document.querySelectorAll('.mobile-nav-link').forEach((link) => {
    link.addEventListener('click', () => {
      if (isOpen) toggleMenu();
    });
  });

  // Desktop dropdown
  const guidesBtn = document.getElementById('guides-btn');
  const guidesPanel = document.getElementById('guides-panel');
  const guidesChevron = document.getElementById('guides-chevron');
  const guidesDropdown = document.getElementById('guides-dropdown');
  let dropdownOpen = false;
  let closeTimeout: ReturnType<typeof setTimeout>;

  function openDropdown() {
    clearTimeout(closeTimeout);
    dropdownOpen = true;
    guidesBtn?.setAttribute('aria-expanded', 'true');
    guidesPanel?.classList.remove('opacity-0', 'invisible', 'translate-y-1', 'pointer-events-none');
    guidesPanel?.classList.add('opacity-100', 'visible', 'translate-y-0', 'pointer-events-auto');
    guidesChevron?.classList.add('rotate-180');
  }

  function closeDropdown() {
    closeTimeout = setTimeout(() => {
      dropdownOpen = false;
      guidesBtn?.setAttribute('aria-expanded', 'false');
      guidesPanel?.classList.add('opacity-0', 'invisible', 'translate-y-1', 'pointer-events-none');
      guidesPanel?.classList.remove('opacity-100', 'visible', 'translate-y-0', 'pointer-events-auto');
      guidesChevron?.classList.remove('rotate-180');
    }, 150);
  }

  guidesDropdown?.addEventListener('mouseenter', openDropdown);
  guidesDropdown?.addEventListener('mouseleave', closeDropdown);
  guidesBtn?.addEventListener('click', () => {
    if (dropdownOpen) closeDropdown();
    else openDropdown();
  });

  // Close on Escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      if (isOpen) toggleMenu();
      if (dropdownOpen) closeDropdown();
    }
  });

  // Close dropdown on outside click
  document.addEventListener('click', (e) => {
    if (dropdownOpen && !guidesDropdown?.contains(e.target as Node)) {
      closeDropdown();
    }
  });
</script>
